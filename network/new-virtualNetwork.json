{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "String"
        },
        "vNetAddressPrefix": {
            "type": "String"
        },
        "vNetName": {
            "type": "String"
        },
        "vNetPrivateAddressPrefix": {
            "type": "String"
        },
        "vNetPrivateSubnetName": {
            "type": "String"
        },
        "vNetResourceGroup": {
            "type": "String"
        }
    },
    "variables": {
        "vNetID": "[resourceId(parameters('vNetResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('vNetName'))]",
        "vNetPrivateSubnetRef": "[concat(variables('vNetID'), '/subnets/', parameters('vNetPrivateSubnetName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[parameters('vnetName')]",
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetAddressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('vNetPrivateSubnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('vNetPrivateAddressPrefix')]"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "vNetPrivateSubnetId": {
            "type": "String",
            "value": "[variables('vNetPrivateSubnetRef')]"
        }
    }
}